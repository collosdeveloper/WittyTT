<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.task">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/ActionBarAppTheme">

        <activity
            android:name=".ui.component.addmoneywith.AddMoneyWithActivity"
            android:label="@string/add_money_with">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.component.carddetails.CardDetailsActivity"
            android:label="@string/card_details" />

        <activity
            android:name=".ui.component.threeds.ThreeDSActivity"
            android:label="@string/threeds_verification" />

        <activity
            android:name=".ui.component.cardamount.CardAmountActivity"
            android:label="@string/amount" />
    </application>
</manifest>